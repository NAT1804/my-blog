---
import BaseHead from "./BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import "../styles/global.css";

export interface Props {
  title: string;
  description: string;
  image?: {
    src: string;
    alt: string;
  };
  data?: any;
  robots?: any;
}

const {
  title = "Default Title",
  description = "Default Description",
  image,
  data,
  robots,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead {title} {description} {image} {data} {robots} />
  </head>
  <body>
    <Header {title} />
    <slot>Default text</slot>
    <Footer />
  </body>
</html>
