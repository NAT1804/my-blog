    @media screen and (min-width: 640px) {
      grid-template-columns: 1fr 2fr;
      place-content: center;
    }

    .hero-image {
      border-radius: 100vmax;
      object-fit: cover;
      object-position: center;
      box-shadow: var(--shadow-lg);
    }
  }
</style>
